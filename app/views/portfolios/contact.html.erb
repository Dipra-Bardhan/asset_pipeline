   <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Contact Me</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <%= form_tag '/messages', method: :post do %>
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">

                            <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <%= text_field_tag :name, "", placeholder: "Name", class: "form-control" %>
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <%= text_field_tag :email, "", placeholder: "Email", type: "email", class: "form-control" %>
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <%= text_field_tag :phone_number, "", placeholder: "Phone Number", class: "form-control" %>
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <%= text_field_tag :message, "", placeholder: "Message", class: "form-control" %>
                                </div>
                            </div>
                            <br>
                            <div id="success"></div>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <%= submit_tag "Send", class: "btn btn-success btn-lg" %>
                                </div>
                            </div>

                    </div>
                <% end %>
            </div>
        </div>
    </section>